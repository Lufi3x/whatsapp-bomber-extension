{
    "manifest_version": 3,
    "name": "WhatsApp Spam Tool",
    "version": "1.0",
    "description": "WhatsApp Web i√ßin mesaj spam eklentisi",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16x16.png",
            "48": "48x48.png",
            "128": "128x128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}